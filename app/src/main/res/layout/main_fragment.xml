<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainViewModel"
            type="com.example.rick_mortyandroidkotlinproject.ui.main.MainViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">

        <TextView
            android:id="@+id/main_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Rick and Morty API"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.12" />

        <EditText
            android:id="@+id/main_fragment_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter keywords"
            android:inputType="textPersonName"
            app:layout_constraintBaseline_toBaselineOf="@+id/main_fragment_search_button"
            app:layout_constraintEnd_toStartOf="@+id/main_fragment_search_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/select_search_radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8">

            <RadioButton
                android:id="@+id/character_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Characters" />

            <RadioButton
                android:id="@+id/location_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location" />

            <RadioButton
                android:id="@+id/episode_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Episodes" />
        </RadioGroup>

        <Button
            android:id="@+id/main_fragment_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> mainViewModel.onNewSearch() }"
            android:text="@android:string/search_go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/main_fragment_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9" />

        <ImageView
            android:id="@+id/main_fragment_character_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@{mainViewModel.image}"
            app:layout_constraintBottom_toTopOf="@+id/main_fragment_name_character"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_fragment_title"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/main_fragment_name_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{@string/format_string_name(mainViewModel.name)}"
            app:layout_constraintBottom_toTopOf="@+id/main_fragment_status_character"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_fragment_character_image" />

        <TextView
            android:id="@+id/main_fragment_status_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{@string/format_string_status(mainViewModel.status)}"
            app:layout_constraintBottom_toTopOf="@+id/main_fragment_species_character"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_fragment_name_character" />

        <TextView
            android:id="@+id/main_fragment_species_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{@string/format_string_species(mainViewModel.specie)}"
            app:layout_constraintBottom_toTopOf="@+id/main_fragment_gender_character"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_fragment_status_character" />

        <TextView
            android:id="@+id/main_fragment_gender_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{@string/format_string_gender(mainViewModel.gender)}"
            app:layout_constraintBottom_toTopOf="@+id/main_fragment_origin_character"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_fragment_species_character" />

        <TextView
            android:id="@+id/main_fragment_origin_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{@string/format_string_origin(mainViewModel.origin)}"
            app:layout_constraintBottom_toTopOf="@+id/main_fragment_last_location_character"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_fragment_gender_character" />

        <TextView
            android:id="@+id/main_fragment_last_location_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{@string/format_string_last_location(mainViewModel.lastLocation)}"
            app:layout_constraintBottom_toTopOf="@+id/select_search_radio_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_fragment_origin_character" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate a random char"
            app:layout_constraintBottom_toTopOf="@+id/select_search_radio_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_fragment_last_location_character" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>